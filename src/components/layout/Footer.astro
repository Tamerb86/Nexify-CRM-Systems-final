---
import { urlStructure, getTranslations, type Language } from '../../lib/i18n';
import { Mail, Phone, MapPin, Linkedin, Facebook, Instagram, Twitter } from 'lucide-astro';

interface Props {
  lang: Language;
}

const { lang } = Astro.props;
const t = getTranslations(lang);
const urls = urlStructure[lang];

const currentYear = new Date().getFullYear();

const footerLinks = {
  company: [
    { label: t.nav?.about || 'About', href: urls.about },
    { label: t.nav?.services || 'Services', href: urls.services },
    { label: t.nav?.projects || 'Projects', href: urls.projects },
    { label: t.nav?.blog || 'Blog', href: urls.blog }
  ],
  support: [
    { label: t.nav?.contact || 'Contact', href: urls.contact },
    { label: t.nav?.pricing || 'Pricing', href: urls.pricing },
    { label: t.footer?.faq || 'FAQ', href: urls.contact },
    { label: t.footer?.support || 'Support', href: urls.contact }
  ],
  legal: [
    { label: t.footer?.privacy || 'Privacy Policy', href: urls.privacy },
    { label: t.footer?.terms || 'Terms of Service', href: urls.terms }
  ]
};

const socialLinks = [
  { icon: Linkedin, href: 'https://linkedin.com/company/nexify-crm', label: 'LinkedIn' },
  { icon: Facebook, href: 'https://facebook.com/nexifycrm', label: 'Facebook' },
  { icon: Instagram, href: 'https://instagram.com/nexifycrm', label: 'Instagram' },
  { icon: Twitter, href: 'https://twitter.com/nexifycrm', label: 'Twitter' }
];
---

<footer class="bg-gray-900 text-gray-300">
  <!-- Main Footer -->
  <div class="container mx-auto px-4 py-16">
    <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <a href={urls.home} class="flex items-center gap-3 mb-6">
          <img src="/images/nexify-logo.png" alt="Nexify CRM Systems" class="h-10 w-auto brightness-0 invert" />
          <span class="text-xl font-bold text-white">Nexify</span>
        </a>
        <p class="text-gray-400 mb-6 max-w-sm">
          {t.footer?.description || 'Professional web development and SaaS solutions for businesses in Norway and beyond.'}
        </p>
        
        <!-- Contact Info -->
        <div class="space-y-3">
          <a href="mailto:kontakt@nexifyhub.no" class="flex items-center gap-3 text-gray-400 hover:text-white transition-colors">
            <Mail class="w-5 h-5 text-teal-500" />
            <span>kontakt@nexifyhub.no</span>
          </a>
          <a href="tel:+4792146050" class="flex items-center gap-3 text-gray-400 hover:text-white transition-colors">
            <Phone class="w-5 h-5 text-teal-500" />
            <span>+47 921 46 050</span>
          </a>
          <div class="flex items-center gap-3 text-gray-400">
            <MapPin class="w-5 h-5 text-teal-500" />
            <span>Oslo, Norway</span>
          </div>
        </div>
      </div>
      
      <!-- Company Links -->
      <div>
        <h3 class="text-white font-semibold mb-4">{t.footer?.company || 'Company'}</h3>
        <ul class="space-y-3">
          {footerLinks.company.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Support Links -->
      <div>
        <h3 class="text-white font-semibold mb-4">{t.footer?.support_title || 'Support'}</h3>
        <ul class="space-y-3">
          {footerLinks.support.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Legal Links -->
      <div>
        <h3 class="text-white font-semibold mb-4">{t.footer?.legal || 'Legal'}</h3>
        <ul class="space-y-3">
          {footerLinks.legal.map(link => (
            <li>
              <a href={link.href} class="text-gray-400 hover:text-white transition-colors">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
        
        <!-- Social Links -->
        <div class="mt-8">
          <h3 class="text-white font-semibold mb-4">{t.footer?.follow || 'Follow Us'}</h3>
          <div class="flex gap-3">
            {socialLinks.map(social => (
              <a 
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 bg-gray-800 rounded-lg flex items-center justify-center text-gray-400 hover:bg-teal-500 hover:text-white transition-all"
                aria-label={social.label}
              >
                <social.icon class="w-5 h-5" />
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="border-t border-gray-800">
    <div class="container mx-auto px-4 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-500 text-sm">
          © {currentYear} Nexify CRM Systems AS. {t.footer?.rights || 'All rights reserved.'}
        </p>
        <p class="text-gray-500 text-sm">
          {t.footer?.made_with || 'Made with'} ❤️ {t.footer?.in_norway || 'in Norway'}
        </p>
      </div>
    </div>
  </div>
</footer>
