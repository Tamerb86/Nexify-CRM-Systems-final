---
import SectionTitle from '../ui/SectionTitle.astro';
import { Rocket, Shield, Clock, Users, CheckCircle, Zap, Award, HeartHandshake } from 'lucide-astro';

interface Card {
  title: string;
  description: string;
  icon?: string;
}

interface Props {
  badge: string;
  title: string;
  subtitle: string;
  cards: Card[];
}

const { badge, title, subtitle, cards } = Astro.props;

const iconMap: Record<string, any> = {
  rocket: Rocket,
  shield: Shield,
  clock: Clock,
  users: Users,
  check: CheckCircle,
  zap: Zap,
  award: Award,
  heart: HeartHandshake
};

const defaultIcons = [Rocket, Shield, Clock, Users];
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <SectionTitle badge={badge} badgeColor="teal" title={title} subtitle={subtitle} />
    
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {cards.map((card, index) => {
        const Icon = card.icon ? iconMap[card.icon] : defaultIcons[index % defaultIcons.length];
        return (
          <div class="scroll-animate bg-gray-50 rounded-2xl p-8 hover:shadow-lg transition-all hover:-translate-y-1 text-center group" style={`transition-delay: ${index * 100}ms`}>
            <div class="w-16 h-16 bg-gradient-to-br from-primary to-teal-500 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <Icon class="w-8 h-8 text-white" />
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">{card.title}</h3>
            <p class="text-gray-600">{card.description}</p>
          </div>
        );
      })}
    </div>
  </div>
</section>
