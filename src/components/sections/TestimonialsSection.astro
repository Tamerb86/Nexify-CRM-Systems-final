---
import SectionTitle from '../ui/SectionTitle.astro';
import { Star } from 'lucide-astro';

interface Testimonial {
  text: string;
  author: string;
  role: string;
  rating?: number;
}

interface Props {
  badge: string;
  title: string;
  subtitle: string;
  testimonials: Testimonial[];
}

const { badge, title, subtitle, testimonials } = Astro.props;
---

<section class="py-20 bg-white">
  <div class="container mx-auto px-4">
    <SectionTitle badge={badge} badgeColor="teal" title={title} subtitle={subtitle} />
    
    <div class="grid md:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-gray-50 rounded-2xl p-8">
          <div class="flex gap-1 mb-4">
            {[...Array(testimonial.rating || 5)].map(() => (
              <Star class="w-5 h-5 text-yellow-400 fill-current" />
            ))}
          </div>
          <p class="text-gray-700 mb-6 leading-relaxed">"{testimonial.text}"</p>
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-gradient-to-br from-primary to-teal-500 rounded-full flex items-center justify-center text-white font-bold">
              {testimonial.author.charAt(0)}
            </div>
            <div>
              <p class="font-bold text-gray-900">{testimonial.author}</p>
              <p class="text-sm text-gray-500">{testimonial.role}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
