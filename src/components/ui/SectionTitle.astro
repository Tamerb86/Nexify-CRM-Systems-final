---
interface Props {
  badge?: string;
  badgeColor?: 'primary' | 'teal';
  title: string;
  subtitle?: string;
  centered?: boolean;
}

const { badge, badgeColor = 'primary', title, subtitle, centered = true } = Astro.props;

const badgeClasses = {
  primary: 'bg-primary/10 text-primary',
  teal: 'bg-teal-500/10 text-teal-600'
};
---

<div class={`mb-16 ${centered ? 'text-center' : ''}`}>
  {badge && (
    <span class={`inline-block px-4 py-2 rounded-full text-sm font-medium mb-4 ${badgeClasses[badgeColor]}`}>
      {badge}
    </span>
  )}
  <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{title}</h2>
  {subtitle && (
    <p class={`text-xl text-gray-600 ${centered ? 'max-w-2xl mx-auto' : ''}`}>{subtitle}</p>
  )}
</div>
