import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { languagesList, getTranslations, type Language } from '../../lib/i18n';

export function getStaticPaths() {
  return languagesList.map(lang => ({
    params: { lang },
    props: { lang }
