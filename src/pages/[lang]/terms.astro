---
import BaseLayout from '../../components/layout/BaseLayout.astro';
import { languagesList, getTranslations, type Language } from '../../lib/i18n';

export function getStaticPaths() {
  return languagesList.map(lang => ({
    params: { lang },
    props: { lang }
  }));
}

const { lang } = Astro.props as { lang: Language };
const t = getTranslations(lang);
const isRTL = lang === 'ar';

const termsData = t.terms || {};
const sections = termsData.sections || [
  { title: 'Terms of Service', content: 'Our terms of service details coming soon...' }
];
---

<BaseLayout lang={lang} page="terms" title={`${t.footer?.legal?.terms || 'Terms of Service'} | Nexify CRM Systems`} description={termsData.intro || 'Terms of Service'}>
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class={`max-w-3xl mx-auto ${isRTL ? 'text-right' : 'text-left'}`}>
        <h1 class="text-4xl font-bold text-gray-900 mb-6">{t.footer?.legal?.terms || 'Terms of Service'}</h1>
        <p class="text-gray-600 mb-4">{termsData.last_updated || ''}</p>
        <p class="text-gray-600 mb-12">{termsData.intro || ''}</p>
        
        <div class="space-y-8">
          {sections.map((section) => (
            <div>
              <h2 class="text-2xl font-bold text-gray-900 mb-4">{section.title}</h2>
              <p class="text-gray-600 whitespace-pre-line">{section.content}</p>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
