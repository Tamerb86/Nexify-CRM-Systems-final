---
import BaseLayout from '../../components/layout/BaseLayout.astro';
import SectionTitle from '../../components/ui/SectionTitle.astro';
import { languagesList, getTranslations, type Language } from '../../lib/i18n';
import { Mail, Phone, MapPin, MessageCircle, Clock, Send, ChevronDown } from 'lucide-astro';

export function getStaticPaths() {
  return languagesList.map(lang => ({
    params: { lang },
    props: { lang }
  }));
}

const { lang } = Astro.props as { lang: Language };
const t = getTranslations(lang);
const isRTL = lang === 'ar';

const contactInfo = [
  { icon: Mail, label: t.contact.info.email.label, value: 'kontakt@nexifyhub.no', href: 'mailto:kontakt@nexifyhub.no' },
  { icon: Phone, label: t.contact.info.phone.label, value: '+47 921 46 050', href: 'tel:+4792146050' },
  { icon: MapPin, label: t.contact.info.address.label, value: 'Oslo, Norway', href: '#' },
  { icon: Clock, label: t.contact.info.hours.label, value: t.contact.info.hours.value, href: '#' }
];

const faqItems = t.contact.faq.items;
---

<BaseLayout lang={lang} page="contact" title={`${t.nav.contact} | Nexify CRM Systems`} description={t.contact.hero.subtitle}>
  <!-- Hero -->
  <section class="py-20 bg-gradient-to-br from-white via-gray-50 to-teal-50/30">
    <div class="container mx-auto px-4 text-center">
      <span class="inline-block px-4 py-2 bg-primary/10 text-primary rounded-full text-sm font-medium mb-6">{t.contact.hero.badge}</span>
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">{t.contact.hero.title}</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">{t.contact.hero.subtitle}</p>
    </div>
  </section>

  <!-- Contact Form + Info -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="bg-gray-50 rounded-2xl p-8 lg:p-12">
          <h2 class={`text-2xl font-bold text-gray-900 mb-6 ${isRTL ? 'text-right' : 'text-left'}`}>{t.contact.form.title}</h2>
          <form class="space-y-6" id="contact-form">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label class={`block text-sm font-medium text-gray-700 mb-2 ${isRTL ? 'text-right' : 'text-left'}`}>{t.contact.form.name.label} *</label>
                <input 
                  type="text" 
                  name="name"
                  required
                  placeholder={t.contact.form.name.placeholder}
                  class={`w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all ${isRTL ? 'text-right' : 'text-left'}`}
                />
              </div>
              <div>
                <label class={`block text-sm font-medium text-gray-700 mb-2 ${isRTL ? 'text-right' : 'text-left'}`}>{t.contact.form.email.label} *</label>
                <input 
                  type="email" 
                  name="email"
                  required
                  placeholder={t.contact.form.email.placeholder}
                  class={`w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all ${isRTL ? 'text-right' : 'text-left'}`}
                />
              </div>
            </div>
            <div>
              <label class={`block text-sm font-medium text-gray-700 mb-2 ${isRTL ? 'text-right' : 'text-left'}`}>{t.contact.form.phone.label}</label>
              <input 
                type="tel" 
                name="phone"
                placeholder={t.contact.form.phone.placeholder}
                class={`w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all ${isRTL ? 'text-right' : 'text-left'}`}
              />
            </div>
            <div>
              <label class={`block text-sm font-medium text-gray-700 mb-2 ${isRTL ? 'text-right' : 'text-left'}`}>{t.contact.form.service.label}</label>
              <select 
                name="service"
                class={`w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all ${isRTL ? 'text-right' : 'text-left'}`}
              >
                <option value="">{t.contact.form.service.placeholder}</option>
                {t.contact.form.service.options.map((option) => (
                  <option value={option.value}>{option.label}</option>
                ))}
              </select>
            </div>
            <div>
              <label class={`block text-sm font-medium text-gray-700 mb-2 ${isRTL ? 'text-right' : 'text-left'}`}>{t.contact.form.message.label} *</label>
              <textarea 
                name="message"
                required
                rows="5"
                placeholder={t.contact.form.message.placeholder}
                class={`w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all resize-none ${isRTL ? 'text-right' : 'text-left'}`}
              ></textarea>
            </div>
            <button 
              type="submit"
              class={`w-full px-6 py-4 bg-gradient-to-r from-primary to-teal-500 text-white font-medium rounded-xl hover:opacity-90 transition-opacity flex items-center justify-center gap-2 ${isRTL ? 'flex-row-reverse' : ''}`}
            >
              <Send class="w-5 h-5" />
              {t.contact.form.submit}
            </button>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div class={isRTL ? 'text-right' : 'text-left'}>
          <h2 class="text-2xl font-bold text-gray-900 mb-6">{t.contact.info.title}</h2>
          <p class="text-gray-600 mb-8">{t.contact.info.subtitle}</p>
          
          <div class="space-y-6 mb-12">
            {contactInfo.map((item) => (
              <a 
                href={item.href}
                class={`flex items-center gap-4 p-4 bg-gray-50 rounded-xl hover:bg-gray-100 transition-colors ${isRTL ? 'flex-row-reverse' : ''}`}
              >
                <div class="w-12 h-12 bg-gradient-to-br from-primary to-teal-500 rounded-xl flex items-center justify-center flex-shrink-0">
                  <item.icon class="w-6 h-6 text-white" />
                </div>
                <div>
                  <p class="text-sm text-gray-500">{item.label}</p>
                  <p class="font-medium text-gray-900">{item.value}</p>
                </div>
              </a>
            ))}
          </div>
          
          <!-- WhatsApp Button -->
          <a 
            href="https://wa.me/4792146050"
            target="_blank"
            rel="noopener noreferrer"
            class={`flex items-center gap-3 px-6 py-4 bg-green-500 text-white font-medium rounded-xl hover:bg-green-600 transition-colors ${isRTL ? 'flex-row-reverse justify-end' : ''}`}
          >
            <MessageCircle class="w-6 h-6" />
            {t.contact.whatsapp}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <SectionTitle badge={t.contact.faq.badge} badgeColor="teal" title={t.contact.faq.title} subtitle={t.contact.faq.subtitle} />
      
      <div class="max-w-3xl mx-auto space-y-4">
        {faqItems.map((item, index) => (
          <div class="bg-white rounded-xl shadow-sm overflow-hidden">
            <button 
              class={`w-full px-6 py-4 flex items-center justify-between ${isRTL ? 'text-right flex-row-reverse' : 'text-left'} hover:bg-gray-50 transition-colors`}
              data-faq-toggle={index}
            >
              <span class="font-medium text-gray-900">{item.question}</span>
              <ChevronDown class="w-5 h-5 text-gray-400 transition-transform" data-faq-icon={index} />
            </button>
            <div class="hidden px-6 pb-4" data-faq-content={index}>
              <p class="text-gray-600">{item.answer}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  document.querySelectorAll('[data-faq-toggle]').forEach(button => {
    button.addEventListener('click', () => {
      const index = button.getAttribute('data-faq-toggle');
      const content = document.querySelector(`[data-faq-content="${index}"]`);
      const icon = document.querySelector(`[data-faq-icon="${index}"]`);
      
      content?.classList.toggle('hidden');
      icon?.classList.toggle('rotate-180');
    });
  });
</script>
