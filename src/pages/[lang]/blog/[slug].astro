export function getStaticPaths() {
  const allArticles = [
    {
      slug: "web-design-trends-2025",
      title: {
        no: "Webtrender 2025: Hva du trenger å vite",
        en: "Web Design Trends 2025: What You Need to Know",
        ar: "اتجاهات تصميم الويب 2025: ما تحتاج معرفته"
      },
      category: "design",
      author: "Sara Johansen",
      date: "2025-01-15",
      readTime: 8
    }
  ];
  
  const paths: { params: { lang: string; slug: string }; props: { lang: string; article: any } }[] = [];
  
  languagesList.forEach(lang => {
    allArticles.forEach(article => {
      paths.push({
        params: { lang, slug: article.slug },
        props: { lang, article }
      });
    });
  });
  
  return paths;
}

const { lang, article } = Astro.props as { lang: Language; article: any };

const pageContent = {
  no: {
    back: "Tilbake til blogg",
    share: "Del artikkel",
    related: "Relaterte artikler",
    min_read: "min lesing"
  },
  en: {
    back: "Back to blog",
    share: "Share article",
    related: "Related articles",
    min_read: "min read"
  },
  ar: {
    back: "العودة للمدونة",
    share: "شارك المقال",
    related: "مقالات ذات صلة",
    min_read: "دقيقة قراءة"
  }
};

const content = pageContent[lang as keyof typeof pageContent] || pageContent.no;

const title = article.title[lang as keyof typeof article.title] || article.title.no;

// Get full article content from the articles array
const fullArticle = articles.find(a => a.slug === article.slug);
const articleContent = fullArticle?.content[lang as keyof typeof fullArticle.content] || fullArticle?.content.no || '';

const breadcrumbItems = [
  { label: lang === 'ar' ? 'الرئيسية' : lang === 'en' ? 'Home' : 'Hjem', href: `/${lang}` },
  { label: lang === 'ar' ? 'المدونة' : lang === 'en' ? 'Blog' : 'Blogg', href: `/${lang}/blog` },
  { label: title }
];

function formatDate(dateStr: string, locale: string) {
  const date = new Date(dateStr);
  const localeMap: Record<string, string> = { no: 'nb-NO', en: 'en-US', ar: 'ar-SA' };
  return date.toLocaleDateString(localeMap[locale] || 'nb-NO', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}
